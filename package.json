{
    "name": "mpm",
    "version": "0.1.0",
    "description": "A package manager for Minecraft",
    "main": "./src/main/main.js",
    "scripts": {
        "main:prod": "electron .",
        "main:watch": "nodemon --watch ./src/main --exec \"electron .\"",
        "renderer:watch": "webpack --watch",
        "renderer:prod": "cross-env NODE_ENV=production webpack",
        "build": "electron-builder build --win --publish never",
        "deploy": "electron-builder build --win --publish always"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/fredluetkemeier/mpm.git"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/fredluetkemeier/mpm/issues"
    },
    "homepage": "https://github.com/fredluetkemeier/mpm#readme",
    "build": {
        "appId": "fredluetkemeier.mpm",
        "files": [
            "src/**/*",
            "node_modules/**/*",
            "assets/**/*",
            "package.json"
        ],
        "artifactName": "mpm-${version}.${ext}"
    },
    "dependencies": {
        "@electron/remote": "^1.0.0",
        "axios": "^0.20.0",
        "custom-electron-titlebar": "^3.2.4",
        "electron-is-dev": "^1.2.0",
        "express": "^4.17.1",
        "history": "^5.0.0",
        "portscanner": "^2.2.0"
    },
    "devDependencies": {
        "elm": "^0.19.1-3",
        "electron": "^10.1.3",
        "cross-env": "^7.0.2",
        "css-loader": "^4.3.0",
        "electron-builder": "^22.8.1",
        "elm-hot-webpack-loader": "^1.1.7",
        "elm-webpack-loader": "^6.0.1",
        "file-loader": "^6.1.0",
        "nodemon": "^2.0.4",
        "sass": "^1.26.11",
        "sass-loader": "^9.0.3",
        "style-loader": "^1.3.0",
        "webpack": "^4.44.2",
        "webpack-cli": "^3.3.12"
    }
}
